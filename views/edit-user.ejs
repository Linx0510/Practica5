<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редактировать пользователя</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Редактировать пользователя</h1>
        
        <form  class="forms" action="/edit-user/<%= user.id_user %>" method="POST">
            <div class="form-group">
                <label for="first_name">Имя:</label>
                <input type="text" id="first_name" name="first_name" value="<%= user.first_name %>" required>
            </div>
            
            <div class="form-group">
                <label for="last_name">Фамилия:</label>
                <input type="text" id="last_name" name="last_name" value="<%= user.last_name %>" required>
            </div>
            
            <div class="form-group">
                <label for="phone">Телефон:</label>
                <input type="tel" id="phone" name="phone" value="<%= user.phone %>" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= user.email || '' %>">
            </div>
            
            <div class="form-group">
                <label for="id_socialStatus">Социальный статус:</label>
                <select id="id_socialStatus" name="id_socialStatus" required>
                    <% socialStatuses.forEach(status => { %>
                        <option value="<%= status.id_socialStatus %>" 
                                <%= user.id_socialStatus === status.id_socialStatus ? 'selected' : '' %>>
                            <%= status.name %> (<%= status.discount %>% скидка)
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="id_tarif">Тариф:</label>
                <select id="id_tarif" name="id_tarif" required>
                    <% tarifs.forEach(tarif => { %>
                        <option value="<%= tarif.id_tarif %>" 
                                <%= user.id_tarif === tarif.id_tarif ? 'selected' : '' %>>
                            <%= tarif.name %> - <%= tarif.price %> руб. (<%= tarif.minutes %> мин, <%= tarif.gb %> ГБ)
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a href="/" class="btn btn-cancel">Отмена</a>
            </div>
        </form>
    </div>
</body>
</html>